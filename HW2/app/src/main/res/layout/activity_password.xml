<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.lanco.hw2.PasswordActivity"
    android:background="#c8ef88">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:id="@+id/passText"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginLeft="20dp"
        android:id="@+id/btn1"
        android:layout_alignTop="@+id/btn2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#84f1a0"
        android:onClick="onClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/btn2"
        android:layout_above="@+id/btn5"
        android:layout_alignLeft="@+id/btn5"
        android:layout_alignStart="@+id/btn5"
        android:backgroundTint="#84f1a0"
        android:onClick="onClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/btn3"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btn6"
        android:layout_alignStart="@+id/btn6"
        android:backgroundTint="#84f1a0"
        android:onClick="onClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_marginLeft="20dp"
        android:id="@+id/btn4"
        android:layout_below="@+id/btn1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#84f1a0"
        android:onClick="onClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/btn5"
        android:layout_below="@+id/btn3"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#84f1a0"
        android:onClick="onClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:layout_marginRight="20dp"
        android:id="@+id/btn6"
        android:layout_above="@+id/btn9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#84f1a0"
        android:onClick="onClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_marginLeft="20dp"
        android:id="@+id/btn7"
        android:layout_below="@+id/btn4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#84f1a0"
        android:onClick="onClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/btn8"
        android:layout_alignTop="@+id/btn7"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#84f1a0"
        android:onClick="onClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:layout_marginRight="20dp"
        android:id="@+id/btn9"
        android:layout_alignTop="@+id/btn8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#84f1a0"
        android:onClick="onClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/btn0"
        android:layout_below="@+id/btn8"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#84f1a0"
        android:onClick="onClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;"
        android:width = "30dp"
        android:height="30dp"
        android:layout_marginRight="20dp"
        android:id="@+id/btnC"
        android:layout_below="@+id/btn9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#84f1a0"
        android:onClick="onClick"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="2"
        android:gravity="center"
        android:maxLength="1"
        android:textSize="25dp"
        android:id="@+id/passEdit1"
        android:layout_below="@+id/passText"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="25dp"
        android:focusable="false"
        android:editable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="2"
        android:gravity="center"
        android:maxLength="1"
        android:textSize="25dp"
        android:id="@+id/passEdit2"
        android:focusable="false"
        android:editable="false"
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@+id/passEdit1"
        android:layout_toRightOf="@+id/passEdit1"
        android:layout_toEndOf="@+id/passEdit1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="2"
        android:gravity="center"
        android:maxLength="1"
        android:textSize="25dp"
        android:id="@+id/passEdit3"
        android:focusable="false"
        android:editable="false"
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@+id/passEdit2"
        android:layout_toRightOf="@+id/passEdit2"
        android:layout_toEndOf="@+id/passEdit2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="2"
        android:gravity="center"
        android:maxLength="1"
        android:textSize="25dp"
        android:id="@+id/passEdit4"
        android:focusable="false"
        android:editable="false"
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@+id/passEdit3"
        android:layout_toRightOf="@+id/passEdit3"
        android:layout_toEndOf="@+id/passEdit3" />

</RelativeLayout>
